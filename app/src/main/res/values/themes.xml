<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Jnana" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="fontFamily">@font/martel_sans</item>
    </style>

    <style name="Theme.Jnana.CardViewText.Title" parent="Theme.MaterialComponents">
        <item name="fontFamily">@font/martel_sans</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundColor">@color/cardview_dark_background</item>
    </style>

    <style name="Theme.Jnana.CardViewText.Desc" parent="Theme.Jnana.CardViewText.Title">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.jnana.SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="background">@android:color/holo_purple</item>
        <item name="android:gravity">center</item>
        <item name="android:drawable">@drawable/ic_launcher_foreground</item>
    </style>
</resources>